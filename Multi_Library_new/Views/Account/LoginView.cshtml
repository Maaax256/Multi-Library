<!--model Multi_Library.Models.LoginViewModel-->

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Your Title</title>
    <link href="/css/Authotification.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <div class="wrapper">
        <h2>Вход</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="login">Логин</label>
                <input asp-for="login" class="form-control" name="login" required />
                <span asp-validation-for="login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="password">Пароль</label>
                <input asp-for="password" class="form-control" type="password" name="password" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <button type="submit" id="loginBtn" class="btn btn-primary">Войти</button>
            <br />
            <a href="@Url.Action("RegistrationPage", "Account")">Нет аккаунта?</a>
        }
    </div>

</body>

</html>
